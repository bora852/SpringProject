<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.model.mapper.UserInfo">
	
	<insert id="insertUser" parameterType="userInfo">
		insert into user values (#{id}, #{pw}, #{name}, #{addr}, #{tel}, #{allergy})
	</insert>

	<select id="login" resultType="userInfo" parameterType="userInfo">
		select * from user where id = #{id} and pw = #{pw}
	</select>

	<select id="selectUser" resultType="userInfo" parameterType="String">
		select * from user where id = #{id}
	</select>
	
	<update id="updateUser" parameterType="userInfo">
		update user set pw = #{pw}, name = #{name}, addr = #{addr}, tel = #{tel}, allergy = #{allergy}
		            where id = #{id}
	</update>
	
	<delete id="deleteUser" parameterType="String">
		delete from user where id = #{id}
	</delete>
	
	<select id="findPw" parameterType="userInfo">
		select * from user where id = #{id} and tel = #{tel}
	</select>
	
	<update id="updatePw" parameterType="userInfo">
		update user set pw = #{pw} where id = #{id}
	</update>
	
</mapper>